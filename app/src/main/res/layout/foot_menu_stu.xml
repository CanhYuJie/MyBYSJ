<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="50dp">
    <!--菜单-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/msgBtnBg"
                    android:layout_weight="1">
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:id="@+id/stuMainMsgRadioBtn"
                        android:drawableTop="@drawable/stu_menu_selected"
                        android:textAlignment="center"
                        android:text="@string/chatMsg"/>
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/msgCount"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/contact_count_shape"
                        android:textColor="#000"
                        android:gravity="center"
                        android:textSize="10dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/contactBg"
                >
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:id="@+id/stuMainContactRadioBtn"
                    android:textAlignment="center"
                    android:drawableTop="@drawable/stu_menu_contact_selected"
                    android:text="@string/contacts"/>
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>