<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="cn.lyj.mybysj.fragment.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#fff"
            android:layout_weight="1"
            app:contentPadding="5dp"
            app:cardCornerRadius="5dp"
            android:background="@drawable/resetpasswordbg"
            app:cardElevation="5dp"
            android:layout_marginTop="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/resetpasswordbg"
                android:id="@+id/reset_pwd"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="修改密码"
                    android:layout_centerInParent="true"
                    android:textSize="30dp"
                    android:textColor="#fdfcfc"
                    android:background="@drawable/border_item"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#fff"
            android:layout_weight="1"
            app:contentPadding="5dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/catlog"
                android:id="@+id/cat_log"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="查看日志"
                    android:textColor="#000"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:textSize="30dp"
                    android:background="@drawable/border_item"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#fff"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            app:contentPadding="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/safe_exit"
                android:background="@drawable/safe_exit">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="安全退出"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:background="@drawable/border_item"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</FrameLayout>
