<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:contentPadding="2dp"
    android:id="@+id/item_root_layout"
    android:layout_height="80dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/room_Root_layout"
        android:orientation="horizontal">
        <cn.lyj.mybysj.views.CircleTextImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:border_color="@android:color/darker_gray"
            app:border_width="2dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:id="@+id/stuAvatar"
            android:src="@drawable/roommanager"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roomName"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:text="1A410"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="金桂苑"
                android:textSize="18dp"
                android:gravity="center"
                android:id="@+id/bFloor"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="A区"
                android:textSize="16dp"
                android:id="@+id/bArea"
                android:textAlignment="center"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>